@model BaigMedicalStore.Models.AddItemToOrderModel

@using Kendo.Mvc.UI 

@using (Html.BeginForm("AddItemToOrder", "Order", FormMethod.Post, new { id = "formProgramSubject" }))
{
    <div class="col-md-12 p0">
        <div class="form-horizontal form-popup form-input-style">
            <div class="form-group">

                <input type="hidden" name="ItemId" id="hfItemId" value="@Model.ItemId" />
                <input type="hidden" name="OrderId" id="hfOrderId" value="@Model.OrderId" />
                <input type="hidden" name="OrderDetailId" id="hfOrderDetailId" value="@Model.OrderDetailId" />
                <input type="hidden" name="DistributorId" id="hfDistributorId" value="@Model.DistributorId" />




            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Item, htmlAttributes: new { @class = "control-label" }) <br/>
                @(Html.Kendo().TextBoxFor(model => model.Item).Enable(false)

                )

            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Category, htmlAttributes: new { @class = "control-label" }) <br />
                @(Html.Kendo().TextBoxFor(model => model.Category).Enable(false)

                )

            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Quantity, htmlAttributes: new { @class = "control-label" }) <br />
                @(Html.Kendo().NumericTextBoxFor(model => model.Quantity)
                                                .Min(1).Format("n0")
                )

            </div>



            <div class="button-bar text-center mt40">
                <input id="btnSaveProgramSubject" type="button" value="Save" onclick='itemGridManager.SaveOrder(this)' class="btn btn-kips btn-purple" />
                <input id="btnCancelProgramSubject" type="button" value="Cancel" onclick='itemGridManager.ClosePopupWindow(this)' class="btn btn-kips" />
            </div>
        </div>
    </div>


}
